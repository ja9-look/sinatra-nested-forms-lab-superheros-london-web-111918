<h1>Create a Team and Heroes!</h1>

<form action="/team" method="post">
  <div>
    <label for="team_name">Team Name:</label>
    <input id="team_name" type="text" name="team[name]" />
  </div>
  <div>
    <label for="team_motto">Team Motto:</label>
    <input id="team_motto" type="text" name="team[motto]" />
  </div>
  <div>
    <label for="member1_name">Member 1 Name:</label>
    <input id="member1_name" type="text" name="team[member][0][name]" />
  </div>
  <div>
    <label for="member1_power">Member 1 Power:</label>
    <input id="member1_power" type="text" name="team[member][0][power]" />
  </div>
  <div>
    <label for="member1_bio">Member 1 Bio:</label>
    <input id="member1_bio" type="text" name="team[member][0][bio]" />
  </div>
  <div>
    <label for="member2_name">Member 2 Name:</label>
    <input id="member2_name" type="text" name="team[member][1][name]" />
  </div>
  <div>
    <label for="member2_power">Member 2 Power:</label>
    <input id="member2_power" type="text" name="team[member][1][power]" />
  </div>
  <div>
    <label for="member2_bio">Member 2 Bio:</label>
    <input id="member2_bio" type="text" name="team[member][1][bio]" />
  </div>
  <div>
    <label for="member3_name">Member 3 Name:</label>
    <input id="member3_name" type="text" name="team[member][2][name]" />
  </div>
  <div>
    <label for="member3_power">Member 3 Power:</label>
    <input id="member3_power" type="text" name="team[member][2][power]" />
  </div>
  <div>
    <label for="member3_bio">Member 3 Bio:</label>
    <input id="member3_bio" type="text" name="team[member][2][bio]" />
  </div>
  <input type="submit" value="Submit" />
</form>